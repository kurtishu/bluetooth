                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:labelFor="@string/app_name"
                android:singleLine="true"
                android:textColor="@color/setting_font_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/setting_line" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/label_tips_20"
                android:textColor="@color/setting_font_text" />

            <TextView
                android:id="@+id/inflated_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:labelFor="@string/app_name"
                android:singleLine="true"
                android:textColor="@color/setting_font_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/setting_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/label_tips_23"
                android:textColor="@color/setting_font_text" />

            <TextView
                android:id="@+id/deflate_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/setting_font_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/setting_line" />
        </RelativeLayout>
</LinearLayout>
